@model IEnumerable<MvcFilmoteka.Models.Film>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Stwórz nowy", "Create")
</p>
<table>
    <tr>
        <th>
            Tytuł
        </th>
        <th>
            Gatunek
        </th>
        <th>
            Produkcja
        </th>
        <th>
            Reżyseria
        </th>
        <th>
            Scenariusz
        </th>
        <th>
            Rok
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tytul)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gatunek)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Produkcja)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rezyseria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Scenariusz)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rok)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.id }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.id }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
