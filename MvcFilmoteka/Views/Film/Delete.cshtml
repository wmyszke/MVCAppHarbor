        @Html.DisplayFor(model => model.Rezyseria)
    </div>

    <div class="display-label">Scenariusz</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Scenariusz)
    </div>

    <div class="display-label">Rok</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Rok)
