    <legend>Film</legend>

    <div class="display-label">Tytuł</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Tytul)
    </div>

    <div class="display-label">Gatunek</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Gatunek)
    </div>

    <div class="display-label">Produkcja</div>
